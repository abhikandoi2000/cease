{
  "manifest_version": 2,

  "name": "Cease",
  "description": "Play and pause music from youtube and rdio without switching tabs",
  "version": "0.1",

  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "commands": {
    "toggle-playback": {
      "suggested_key": {
        "default": "Ctrl+Comma"
      },
      "description": "Toggle event for playback"
    },
    "play-next": {
      "suggested_key": {
        "default": "Ctrl+Period"
      },
      "description": "Play the next item"
    }
  },

  "permissions": [
    "tabs",
    "*://www.youtube.com/",
    "*://www.rdio.com/"
  ]
}
